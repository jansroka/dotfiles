#!/usr/bin/env bash

# Source: https://code.mendhak.com/simple-bash-prompt-for-developers-ps1-git/, accessed 2023-08-09

function parse_git_dirty {
  [[ $(git status --porcelain 2> /dev/null) ]] && echo "*"
}
function parse_git_branch {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/ (\1$(parse_git_dirty))/"
}


# Only run this if we are in a bash shell
if [ -n "${BASH_VERSION}" ]; then
	# $BASH is set - we are in bash
	export PS1="\t \[\033[32m\]\w\[\033[00m\] $ "
elif [ -n "${ZSH_VERSION}" ]; then
	# We are in zsh
	export PS1="%* %F{green}%~%f $ "
fi
